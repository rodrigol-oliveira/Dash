<div class="grafico content img-responsive" id="grafico3">
    <script type="text/javascript">
        $(function () {
            $('#grafico3').highcharts({
                title: {
                    text: ''
                },

                subtitle: {
                    text: ''
                },

                yAxis: {
                    title: {
                        text: ''
                    }
                },

                xAxis: {
                    accessibility: {
                        rangeDescription: 'Range: 2010 to 2017'
                    }
                },

                legend: {
                    layout: 'vertical',
                    align: 'right',
                    verticalAlign: 'middle'
                },

                plotOptions: {
                    series: {
                        label: {
                            connectorAllowed: false
                        },
                        pointStart: 2015
                    }
                },



                
                series: [
                    {
                        name: 'PAY TV', 
                        data: [  
                        <% for(i = 0; i < platforms.length; i ++) { %>
                            <%- platforms[i].Sum_of_SUBS_PAY_TV %>, 
                  <%}%>	
                        ],
                    },
                    {
                        name: 'NETFLIX',
                        data: [
                        <% for(i = 0; i < platforms.length; i ++) { %>
                            <%- platforms[i].Sum_of_SUBS_NETFLIX %>, 
                  <%}%>	
                        ]
                    },
                    {
                        name: 'SVOD',
                        data: [
                        <% for(i = 0; i < platforms.length; i ++) { %>
                            <%- platforms[i].Sum_of_SUBS_SVOD %>, 
                        <%}%>	
                        ]
                    },
                    {
                        name: 'BANDA LARGA',   
                        data: [
                        <% for(i = 0; i < platforms.length; i ++) { %>
                            <%- platforms[i].Sum_of_SUBS_BANDA_LARGA %>, 
                  <%}%>	
                        ]
                    },

                ],

                responsive: {
                    rules: [{
                        condition: {
                            maxWidth: 500
                        },
                        chartOptions: {
                            legend: {
                                layout: 'horizontal',
                                align: 'center',
                                verticalAlign: 'bottom'
                            }
                        }
                    }]
                }


            });
       
        });
    </script>
</div>

</div>